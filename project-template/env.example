# Compliance Flow Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
ENVIRONMENT=dev
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://dev:dev123@localhost:5432/compliance_flow
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# Azure Configuration (for production)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_KEY_VAULT_URL=

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:8001
DECLARATION_SERVICE_URL=http://localhost:8002
FORM_SERVICE_URL=http://localhost:8003
RULE_ENGINE_SERVICE_URL=http://localhost:8004
REVIEW_SERVICE_URL=http://localhost:8005
CASE_SERVICE_URL=http://localhost:8006
NOTIFICATION_SERVICE_URL=http://localhost:8007
ANALYTICS_SERVICE_URL=http://localhost:8008

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Azure AD SSO (update with your tenant details)
AZURE_AD_TENANT_ID=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_REDIRECT_URI=http://localhost:3000/auth/callback

# Email/Notification Configuration
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@complianceflow.local

# File Storage
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=compliance-files

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
CORRELATION_ID_HEADER=X-Correlation-ID

# Feature Flags
ENABLE_SWAGGER_DOCS=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60



